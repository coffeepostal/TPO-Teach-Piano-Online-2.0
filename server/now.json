{
    "version": 2,
    "builds": [
        {
            "src": "/src/app.js",
            "use": "@now/node-server"
        },
        {
            "src": "/public/**",
            "use": "@now/static"
        }
    ],
    "routes": [
        {
            "src": "/src/(.*)",
            "dest": "/src/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}